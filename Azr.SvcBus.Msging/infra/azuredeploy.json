{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "serviceBusNamespaceName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Service Bus namespace"
      }
    },
    "fileTopicName": {
      "type": "string",
      "metadata": {
        "description": "Name of the file topic"
      }
    },
    "chunkQueueName": {
      "type": "string",
      "metadata": {
        "description": "Name of the chunk queue"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    }
  },
  "variables": {
    "sbVersion": "2024-01-01"
  },
  "resources": [
    {
      "type": "Microsoft.ServiceBus/namespaces",
      "apiVersion": "[variables('sbVersion')]",
      "name": "[parameters('serviceBusNamespaceName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Standard",
        "tier": "Standard"
      },
      "properties": {}
    },
    {
      "type": "Microsoft.ServiceBus/namespaces/topics",
      "apiVersion": "[variables('sbVersion')]",
      "name": "[format('{0}/{1}', parameters('serviceBusNamespaceName'), parameters('fileTopicName'))]",
      "dependsOn": [
        "[resourceId('Microsoft.ServiceBus/namespaces', parameters('serviceBusNamespaceName'))]"
      ],
      "properties": {}
    },
    {
      "type": "Microsoft.ServiceBus/namespaces/topics/subscriptions",
      "apiVersion": "[variables('sbVersion')]",
      "name": "[format('{0}/{1}/TxtFileReceiver', parameters('serviceBusNamespaceName'), parameters('fileTopicName'))]",
      "dependsOn": [
        "[resourceId('Microsoft.ServiceBus/namespaces/topics', parameters('serviceBusNamespaceName'), parameters('fileTopicName'))]"
      ],
      "properties": {}
    },
    {
      "type": "Microsoft.ServiceBus/namespaces/topics/subscriptions/rules",
      "apiVersion": "[variables('sbVersion')]",
      "name": "[format('{0}/{1}/TxtFileReceiver/TxtFilter', parameters('serviceBusNamespaceName'), parameters('fileTopicName'))]",
      "dependsOn": [
        "[resourceId('Microsoft.ServiceBus/namespaces/topics/subscriptions', parameters('serviceBusNamespaceName'), parameters('fileTopicName'), 'TxtFileReceiver')]"
      ],
      "properties": {
        "filterType": "SqlFilter",
        "sqlFilter": {
          "sqlExpression": "fileType = 'txt'"
        }
      }
    },
    {
      "type": "Microsoft.ServiceBus/namespaces/topics/subscriptions",
      "apiVersion": "[variables('sbVersion')]",
      "name": "[format('{0}/{1}/PdfFileReceiver', parameters('serviceBusNamespaceName'), parameters('fileTopicName'))]",
      "dependsOn": [
        "[resourceId('Microsoft.ServiceBus/namespaces/topics', parameters('serviceBusNamespaceName'), parameters('fileTopicName'))]"
      ],
      "properties": {}
    },
    {
      "type": "Microsoft.ServiceBus/namespaces/topics/subscriptions/rules",
      "apiVersion": "[variables('sbVersion')]",
      "name": "[format('{0}/{1}/PdfFileReceiver/PdfFilter', parameters('serviceBusNamespaceName'), parameters('fileTopicName'))]",
      "dependsOn": [
        "[resourceId('Microsoft.ServiceBus/namespaces/topics/subscriptions', parameters('serviceBusNamespaceName'), parameters('fileTopicName'), 'PdfFileReceiver')]"
      ],
      "properties": {
        "filterType": "SqlFilter",
        "sqlFilter": {
          "sqlExpression": "fileType = 'pdf'"
        }
      }
    },
    {
      "type": "Microsoft.ServiceBus/namespaces/queues",
      "apiVersion": "[variables('sbVersion')]",
      "name": "[format('{0}/{1}', parameters('serviceBusNamespaceName'), parameters('chunkQueueName'))]",
      "dependsOn": [
        "[resourceId('Microsoft.ServiceBus/namespaces', parameters('serviceBusNamespaceName'))]"
      ],
      "properties": {}
    },
    {
      "type": "Microsoft.ServiceBus/namespaces/authorizationRules",
      "apiVersion": "[variables('sbVersion')]",
      "name": "[format('{0}/RootSharedAccessKey', parameters('serviceBusNamespaceName'))]",
      "dependsOn": [
        "[resourceId('Microsoft.ServiceBus/namespaces', parameters('serviceBusNamespaceName'))]"
      ],
      "properties": {
        "rights": [
          "Send",
          "Listen"
        ]
      }
    }
  ],
  "outputs": {
    "namespaceRootConnectionString": {
      "type": "string",
      "value": "[listKeys(resourceId('Microsoft.ServiceBus/namespaces/authorizationRules', parameters('serviceBusNamespaceName'), 'RootSharedAccessKey'), variables('sbVersion')).primaryConnectionString]"
    }
  }
}