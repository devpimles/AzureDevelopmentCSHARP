                "[resourceId('Microsoft.KeyVault/vaults', parameters('keyVaultName'))]"
              ]
            }
          ],
          "outputs": {
            "keyVaultName": {
              "type": "string",
              "value": "[parameters('keyVaultName')]"
            },
            "keyVaultId": {
              "type": "string",
              "value": "[resourceId('Microsoft.KeyVault/vaults', parameters('keyVaultName'))]"
            },
            "keyVaultUri": {
              "type": "string",
              "value": "[reference(resourceId('Microsoft.KeyVault/vaults', parameters('keyVaultName')), '2021-11-01-preview').vaultUri]"
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2025-04-01",
      "name": "deploy-appconfig",
      "properties": {
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "mode": "Incremental",
        "parameters": {
          "appConfigName": {
            "value": "[parameters('appConfigName')]"
          },
          "appConfigSku": {
            "value": "[parameters('appConfigSku')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "AI": {
            "value": "[parameters('AI')]"
          },
          "keyVaultUri": {
            "value": "[reference(resourceId('Microsoft.Resources/deployments', 'deploy-keyvault'), '2025-04-01').outputs.keyVaultUri.value]"
          }
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "metadata": {
            "_generator": {
              "name": "bicep",
              "version": "0.38.33.27573",
              "templateHash": "211037704766466655"
            }
          },
          "parameters": {
            "appConfigName": {
              "type": "string",
              "metadata": {
                "description": "Specifies the name of the App Configuration store."
              }
            },
            "appConfigSku": {
              "type": "string",
              "defaultValue": "standard",
              "metadata": {
                "description": "Specifies the SKU of the App Configuration store."
              }
            },
            "location": {
              "type": "string",
              "metadata": {
                "description": "The location for the App Configuration store."
              }
            },
            "AI": {
              "type": "object",
              "metadata": {
                "description": "AI provider configuration object containing OpenAI and Anthropic settings."
              }
            },
            "keyVaultUri": {
              "type": "string",
              "metadata": {
                "description": "The Key Vault URI used for Key Vault references."
              }
            }
          },
          "variables": {
            "aiOpenAIKeys": [
              "ModelName",
              "Temperature",
              "MaxTokens",
              "TopP",
              "FrequencyPenalty",
              "PresencePenalty"
            ],
            "aiAnthropicKeys": [
              "ModelName",
              "Temperature",
              "MaxTokens",
              "TopK",
              "TopP"
            ]
          },
          "resources": [
            {
              "type": "Microsoft.AppConfiguration/configurationStores",
              "apiVersion": "2024-05-01",
              "name": "[parameters('appConfigName')]",
              "location": "[parameters('location')]",
              "sku": {
                "name": "[parameters('appConfigSku')]"
              },
              "properties": {}
            },
            {
              "copy": {
                "name": "openAIKeys",
                "count": "[length(variables('aiOpenAIKeys'))]",
                "mode": "serial",
                "batchSize": 1
              },
              "type": "Microsoft.AppConfiguration/configurationStores/keyValues",
              "apiVersion": "2024-05-01",
              "name": "[format('{0}/{1}', parameters('appConfigName'), format('AI:OpenAI:{0}', variables('aiOpenAIKeys')[copyIndex()]))]",
              "properties": {
                "value": "[string(parameters('AI').OpenAI[variables('aiOpenAIKeys')[copyIndex()]])]",
                "contentType": "text/plain",
                "tags": {
                  "provider": "OpenAI",
                  "category": "AIConfig"
                }
              },
              "dependsOn": [
                "[resourceId('Microsoft.AppConfiguration/configurationStores', parameters('appConfigName'))]"
              ]
            },
            {
              "copy": {
                "name": "anthropicKeys",
                "count": "[length(variables('aiAnthropicKeys'))]",
                "mode": "serial",
                "batchSize": 1
              },
              "type": "Microsoft.AppConfiguration/configurationStores/keyValues",
              "apiVersion": "2024-05-01",
              "name": "[format('{0}/{1}', parameters('appConfigName'), format('AI:Anthropic:{0}', variables('aiAnthropicKeys')[copyIndex()]))]",
              "properties": {
                "value": "[string(parameters('AI').Anthropic[variables('aiAnthropicKeys')[copyIndex()]])]",
                "contentType": "text/plain",
                "tags": {
                  "provider": "Anthropic",
                  "category": "AIConfig"
                }
              },
              "dependsOn": [
                "[resourceId('Microsoft.AppConfiguration/configurationStores', parameters('appConfigName'))]"
              ]
            },
            {
              "type": "Microsoft.AppConfiguration/configurationStores/keyValues",
              "apiVersion": "2024-05-01",
              "name": "[format('{0}/{1}', parameters('appConfigName'), 'AI:OpenAI:ApiKey')]",
              "properties": {
                "value": "[format('{{\"uri\": \"{0}secrets/AI--OpenAI--ApiKey\"}}', parameters('keyVaultUri'))]",
                "contentType": "application/vnd.microsoft.appconfig.keyvaultref+json;charset=utf-8",
                "tags": {
                  "provider": "OpenAI",
                  "category": "AISecretRef"
                }
              },
              "dependsOn": [
                "[resourceId('Microsoft.AppConfiguration/configurationStores', parameters('appConfigName'))]"
              ]
            },
            {
              "type": "Microsoft.AppConfiguration/configurationStores/keyValues",
              "apiVersion": "2024-05-01",
              "name": "[format('{0}/{1}', parameters('appConfigName'), 'AI:Anthropic:ApiKey')]",
              "properties": {
                "value": "[format('{{\"uri\": \"{0}secrets/AI--Anthropic--ApiKey\"}}', parameters('keyVaultUri'))]",
                "contentType": "application/vnd.microsoft.appconfig.keyvaultref+json;charset=utf-8",
                "tags": {
                  "provider": "Anthropic",
                  "category": "AISecretRef"
                }
              },
              "dependsOn": [
                "[resourceId('Microsoft.AppConfiguration/configurationStores', parameters('appConfigName'))]"
              ]
            }
          ],
          "outputs": {
            "appConfigName": {
              "type": "string",
              "value": "[parameters('appConfigName')]"
            }
          }
        }
